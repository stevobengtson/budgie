<div class="flex justify-center items-center min-h-screen">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-center text-2xl font-bold mb-6">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="relative">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "peer w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" %>
        <%= f.label :email, class: "absolute left-3 -top-2.5 bg-white px-1 text-gray-500 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:left-4 peer-placeholder-shown:text-base peer-focus:-top-2.5 peer-focus:left-3 peer-focus:text-sm peer-focus:text-blue-500" %>
      </div>

      <div class="relative">
        <%= f.password_field :password, autocomplete: "current-password", class: "peer w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" %>
        <%= f.label :password, class: "absolute left-3 -top-2.5 bg-white px-1 text-gray-500 transition-all peer-placeholder-shown:top-4 peer-placeholder-shown:left-4 peer-placeholder-shown:text-base peer-focus:-top-2.5 peer-focus:left-3 peer-focus:text-sm peer-focus:text-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full bg-blue-500 text-white p-4 rounded-lg hover:bg-blue-600 mb-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>