<div id="<%= dom_id category %>" class="grid grid-cols-3 border-b border-gray-300 pr-2 pl-2 pt-1 pb-1">
  <div></div>
  <div class="text-start">
    <%= category.name %>
  </div>
  <div class="flex space-x-2 justify-end text-end">
    <%= link_to "Edit", edit_category_path(category), class: "rounded-lg pl-2 pr-2 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Delete", category, method: :delete, class: "rounded-lg pl-2 pr-2 bg-red-100 font-medium" %>
  </div>
</div>
