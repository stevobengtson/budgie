<% item_class = "flex text-2xl p-1" + (@selected_account.blank? ? " bg-blue-500 rounded" : "") %>
<div>
  <%= link_to "All Accounts", transactions_path, { class: item_class } %>
</div>
<% @accounts.each do |account| %>
  <% item_class = "flex pl-4" + (@selected_account == account ? " bg-blue-500 rounded" : "") %>
  <div class="pb-2">
    <%= link_to account.name, transactions_path(account_id: account.id), { class: item_class } %>
    <%= number_to_currency account.balance %>
  </div>
<% end %>
<div class="flex justify-end">
  <%= link_to 'Add account', new_account_path, class: "text-right bg-transparent text-xs m-1 p-1 text-white rounded-lg bg-blue-500 hover:bg-blue-800" %>
</div>
