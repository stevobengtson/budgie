<div class="w-full">
  <% content_for :title, "Accounts" %>

  <div class="flex justify-between items-center pb-5">
    <h1 class="font-bold text-4xl">Accounts</h1>
    <%= link_to "New account", new_account_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="accounts" class="mx-auto bg-white dark:bg-slate-800 shadow-md rounded border border-gray-200 overflow-hidden mb-5">
    <div class="grid grid-cols-3 bg-slate-200 dark:bg-slate-600 text-gray-700 dark:text-slate-200 font-bold text-center py-2">
      <div>
        <strong class="block font-medium mb-1">Name</strong>
      </div>
      <div>
        <strong class="block font-medium mb-1">Type</strong>
      </div>
      <div>
        <strong class="block font-medium mb-1">Action</strong>
      </div>
    </div>

    <% @accounts.each do |account| %>
      <%= render account %>
    <% end %>
  </div>
</div>
