<div class="w-full">
  <% content_for :title, "Accounts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl dark:text-white">Accounts</h1>
    <%= link_to "New account", new_account_path, class: "rounded-lg py-3 px-5 bg-blue-500 hover:bg-blue-700 text-white block font-medium" %>
  </div>

  <div class="mt-4 -mb-3">
    <div class="min-w-full not-prose relative bg-slate-50 rounded-xl overflow-hidden dark:bg-slate-800/25">
      <div style="background-position:10px 10px" class="inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,#fff,rgba(255,255,255,0.6))] dark:bg-grid-slate-700/25 dark:[mask-image:linear-gradient(0deg,rgba(255,255,255,0.1),rgba(255,255,255,0.5))]">
        <div class="relative rounded-xl overflow-auto">
          <div class="shadow-sm overflow-hidden my-8">      
            <table class="table-auto w-full text-sm">
              <%= render TableHeadComponent.new(columns: [
                { :title => "Id" },
                { :title => "Name", :sortable => true, :column => "name" },
                { :title => "Type", :sortable => true, :column => "atype" },
                { :title => "Balance" },
                { :title => "Interest Rate" },
                { :title => "Actions" }
              ]) %>
              <tbody id="accounts" class="bg-white dark:bg-slate-800">
                <%= render @accounts %>
                <%= render "table/next_page_auto_scroll" %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
