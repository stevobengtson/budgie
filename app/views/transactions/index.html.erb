<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <% content_for :title, "Transactions" %>

  <div class="flex justify-between items-center pb-5">
    <h1 class="font-bold text-4xl">Transactions</h1>
    <%= link_to "New transaction", new_transaction_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="transactions" class="mx-auto bg-white shadow-md rounded border border-gray-200 overflow-hidden mb-5">
    <div class="grid grid-cols-5 bg-gray-200 text-gray-700 font-bold text-center py-2">
      <div>
        <strong class="block font-medium mb-1">Account</strong>
      </div>
      <div>
        <%= sortable "entry", "Entry", "block mb-1" %>
      </div>
      <div>
        <strong class="block font-medium mb-1">Description</strong>
      </div>
      <div>
        <%= sortable "amount", "Amount", "block mb-1" %>
      </div>
      <div>
        <strong class="block font-medium mb-1">Action</strong>
      </div>
    </div>
    <% @transactions.each do |transaction| %>
      <%= render transaction %>
    <% end %>
  </div>
  <div class="flex justify-between items-center mb-5">
    <div class="flex-1 text-left"><%== pagy_info(@pagy) %></div>
    <div class="flex-1 text-right"><%== pagy_nav(@pagy) %></div>
  </div>
</div>
