<%= turbo_frame_tag "model" do %>
  <div aria-labelledby="modal-title"
    aria-modal="true" class="fixed inset-0 z-50 overflow-y-auto bg-black/80" role="dialog">
    <div class="h-screen w-full relative flex items-center justify-center">
      <div class="shadow-xl max-w-2xl bg-white m-1 p-8 prose prose-indigo origin-bottom mx-auto min-w-[600px] rounded-2xl">

        <h1 id="modal-title">New transaction</h1>
        <%= render "form", transaction: @transaction %>
      </div>
    </div>
  </div>
<% end %>
